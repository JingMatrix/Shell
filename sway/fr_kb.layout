// Keyboard layouts for France
// To be saved as file ~/.xkb/symbols/fr
// Refer to file /usr/share/X11/xkb/symbols/fr

default partial alphanumeric_keys
xkb_symbols "vim" {

    include "fr(basic)"
    name[Group1]="French (Number row switched)";

    key <TLDE>	{ [     grave, asciitilde,  asciicircum,  twosuperior ]	};
    key <AE01>	{ [         1,  ampersand,  onesuperior,   exclamdown ]	};
    key <AE02>	{ [         2,     eacute,   asciitilde,    oneeighth ]	};
    key <AE03>	{ [         3,   quotedbl,   numbersign,     sterling ]	};
    key <AE04>	{ [         4, apostrophe,    braceleft,       dollar ]	};
    key <AE05>	{ [         5,  parenleft,  bracketleft, threeeighths ]	};
    key <AE06>	{ [         6,      minus,          bar,  fiveeighths ]	};
    key <AE07>	{ [         7,     egrave,        grave, seveneighths ]	};
    key <AE08>	{ [         8, underscore,    backslash,    trademark ]	};
    key <AE09>	{ [         9,   ccedilla,  asciicircum,    plusminus ]	};
    key <AE10>	{ [         0,     agrave,           at,       degree ]	};
    key <AE11>	{ [    degree, parenright, bracketright, questiondown ]	};
    key <AE12>	{ [      plus,      equal,   braceright,  dead_ogonek ]	};

// Vim friendly
    key <AD11>	{ [ bracketleft,  braceleft, dead_circumflex, dead_diaeresis ] };
    key <AD12>	{ [bracketright, braceright,          dollar,       sterling ] };
    key <BKSL>	{ [    asterisk,   quotedbl,     aapostrophe,             mu ] };
    key <AC11>	{ [   backslash,    percent, dead_circumflex,         ugrave ] };
    key <AB08>	{ [      period,  semicolon,           U2022,       multiply ] }; // â€¢
    key <AB09>	{ [       colon,      slash,             bar,       division ] };
    key <AB10>	{ [      exclam,     dollar,      numbersign,        section ] };
};

// vim: ft=xkb :
