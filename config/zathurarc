# Zathura configuration file
# See man `man zathurarc'

# use external cmd
set sandbox none

# Open document in fit-width mode by default
set adjust-open width

# zathurarc-appearance

set font "monospace 15"

# set recolor true
set default-bg rgba(0,0,0,0.7)
set recolor-lightcolor rgba(0,0,0,0)

# map

map c exec "/home/jing/Documents/Code/Shell/config/goldendict_zathura"
map [fullscreen] c exec "/home/jing/Documents/Code/Shell/config/goldendict_zathura"
map p exec 'zsh -c "qutebrowser \"$(wl-paste -p)\""'
map [fullscreen] p exec 'zsh -c "qutebrowser \"$(wl-paste -p)\""'
map m exec "/home/jing/Documents/Code/Shell/scripts/latex_ocr"
map [fullscreen] m exec "/home/jing/Documents/Code/Shell/scripts/latex_ocr"
map <C-s> exec 'sioyek "$FILE"'
map [fullscreen] <C-s> exec 'sioyek "$FILE"'

# appearance

set window-title-basename true
set statusbar-home-tilde true
set guioptions ""
set window-width 1920
set window-height 1080
set selection-notification false
set page-padding 0
set scroll-step 100


set first-page-column 2:2
